<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="basicstruts2" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
        
                
        <action name="pacientes" class="actions.PacientesAction" method="execute">
            <result name="success">/pacientes.jsp</result>
        </action>
        
        <action name="pacienteListar" class="actions.PacienteListar" method="execute">
            <result name="success">/pacienteListar.jsp</result>
        </action>
        
        <action name="pacienteObter" class="actions.PacienteObter" method="execute">
            <result name="success">/pacienteEditar.jsp</result>
        </action>
        
        <action name="pacienteIncluir" class="actions.PacienteIncluir" method="execute">
			<result name="input">/pacienteIncluir.jsp</result>
            <result name="success">/pacienteIncluirSucesso.jsp</result>
        </action>
        
        <action name="pacienteEditar" class="actions.PacienteEditar">
            <result name="success" type="redirectAction">
				<param name="actionName">pacienteListar</param>
			</result>
        </action>
        
        <action name="pacienteExcluir" class="actions.PacienteExcluir">
            <result name="success" type="redirectAction">
				<param name="actionName">pacienteListar</param>
			</result>
        </action>
        
    </package>

</struts>
